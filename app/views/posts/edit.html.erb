<h1>Update</h1>


<br />
<div class="form-wrapper">
        <div class="form-group text-center">
            <%= image_tag @post.image, class:'img-responsive', width: "100%" %>
        </div>
        <%= render "/shared/form" %>
        </div>
        <div class="text-center">
            <%= link_to "Delete", post_path(@post), method: :delete,  data: { confirm: "Are you sure you want to delete this post?" } %>
            <%= link_to "Cancel", posts_path, class:"text-center caption" %>
        </div>
    
</div>

