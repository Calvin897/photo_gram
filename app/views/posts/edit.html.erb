<h1>Update</h1>


<br />
<div class="form-wrapper">
        <div class="form-group text-center">
            <%= image_tag @post.image, class:'img-responsive' %>
        </div>
        <div class="form-group ">
            <%= simple_form_for @post, html: { class: 'form-horizontal', multipart: true } do |f| %>
            <%= f.file_field  :image, class:"center" %>
        </div>
        <br />
        <div class="form-group text-center">
            <%= f.label :caption %><br />
            <%= f.input :caption,  class:" form-control" %>
        </div>
        <br />
        <div class="form-group text-center">
            <%= f.button :submit, class:"btn btn-success" %>
        </div>
            <% end %>
        <div class="text-center">
            <%= link_to "Delete", post_path(@post), method: :delete,  data: { confirm: "Are you sure you want to delete this post?" } %>
            <%= link_to "Cancel", posts_path, class:"text-center caption" %>
        </div>
    
</div>

