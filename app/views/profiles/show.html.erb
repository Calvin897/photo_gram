      <div class="page-content">
      <div class="container">
                <!-- Banner Area Start -->
                <div class="banner-user">
                    <div class="banner-content">
                        <div class="media">
                            <div class="item-img show-image-profile" >
                              <%= profile_avatar_select(@user) %>
                            </div>
                            <div class="media-body">
                                <h3 class="item-title"><%= @user.user_name %></h3>
                                <div class="item-subtitle"><%= @user.bio %></div>
                                <ul class="item-social">
                                    <span>
                                    <% if @user == current_user %>
                                      <%= link_to 'Edit Profile', edit_profile_path(@user.user_name), class: 'btn btn-success edit-btn' %>
                                      <% else %>
                                        <% if current_user_is_following(current_user.id, @user.id) %>
                                        <div  class=' js-unfollow-btn'>
                                        <%= link_to 'Following', unfollow_user_path, 
                                        remote: true,
                                        class: 'btn unfollow-button ',
                                        id: 'unfollow-button',
                                        method: :post %>
                                        </div>
                                        
                                      <% else %>

                                      <div>
                                        <div guy_to_follow_id="<%=  @user.id %>" class=' js-follow-btn' id="follow-button">
                                          <%= link_to 'Follow', follow_user_path, 
                                            remote: true,
                                            class: 'btn follow-button',
                                            method: :post %>
                                        </div>
                                      </div>
                                      <% end %>
                                      <% end %>
                                  </span>
                                </ul>
                                <ul class="user-meta">
                                    <li>Posts: <span><%= @user.posts.count %></span></li>
                                    <li>Followers: <span id="js-followers-count" following-ppl="<%= @user.followers.count %>"  class="js-followers"><%= @user.followers.count %></span></li>
                                    <li>Following: <span id="js-following-count" following-ppl="<%= @user.following.count %>"  class="js-following"><%= @user.following.count %></span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                </div>




<% @posts.each do |post| %>
  <%= render 'posts/post', post: post %>
<% end %>
